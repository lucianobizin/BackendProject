<div class="container">
    {{#if this.user.userName}}
    <h1 class="header">Hola {{this.user.userName}}, nos gusta verte de nuevo por aqu√≠</h1>
    {{else}}
    <h1 class="header">Hola, gracias por visitarnos</h1>
    {{/if}}
    <div class="page-title">
        <h2>All products</h2>
    </div>
    <div class="products">
        {{#each products}}
        <div class="product">
            <h1>{{this.title}}</h1>
            <img src={{this.thumbnail.[0]}}>
            <p> Description: {{this.description}}</p>
            <p> Price: {{this.price}}</p>
            <p> Stock: {{this.stock}}</p>
            <p> Code: {{this.code}}</p>
            <p> Category: {{this.category}}</p>
            <p> Owner: {{this.owner}}</p>
            <p> Status: {{this.status}}</p>
            <p id="pid"> ID: {{this._id}}</p>
            <form class="buyForm">
                <input type="hidden" id="pid" name="pid" value="{{this._id}}"></input>
                <label for="quantity">Quantity</label>
                <input type="number" id="quantity" name="quantity" min="1" required></input>
                <input type="submit" value="Add to cart">
            </form>
            <button class="product-button" data-product-id="{{this._id}}">Details and chat</button>
        </div>
        {{/each}}
    </div>
    <div class="pagination">
        {{#if hasPrevPage}}
        <a href="{{prevLink}}"><button>Last page</button></a>
        {{/if}}
        {{#if hasNextPage}}
        <a href="{{nextLink}}"><button>Next page</button></a>
        {{/if}}
        <p>Page {{currentPage}} of {{totalPages}}</p>
    </div>
</div>

<script src="/js/index.js"></script>